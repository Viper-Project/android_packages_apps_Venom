<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View android:layout_width="match_parent"
        android:id="@+id/divider"
        android:layout_above="@+id/bubbleTab"
        android:layout_height="2px"
        android:background="@*android:color/list_divider_dark"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/divider"/>

    <com.viper.venom.bubbletab.BubbleTab
        android:id="@+id/bubbleTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clipToPadding="false"
        android:background="@color/BottomBarBackgroundColor"
        app:bubbleTab_circleColor="@color/theme_accent"
        app:bubbleTab_circleRatio="1.25" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="11dp"
            android:textColor="@*android:color/about_text_color_secondary"
            android:text="@string/status_bar_tab"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:freezesText="true"
            android:drawableTop="@drawable/statusbar_tab" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="11dp"
            android:textColor="@*android:color/about_text_color_secondary"
            android:text="@string/recents_tab"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:freezesText="true"
            android:drawableTop="@drawable/recents_tab" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="11dp"
            android:textColor="@*android:color/about_text_color_secondary"
            android:text="@string/lockscreen_tab"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:freezesText="true"
            android:drawableTop="@drawable/lockscreen_tab" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="11dp"
            android:textColor="@*android:color/about_text_color_secondary"
            android:text="@string/system_tab"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:freezesText="true"
            android:drawableTop="@drawable/system_tab" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="11dp"
            android:textColor="@*android:color/about_text_color_secondary"
            android:text="@string/about_tab"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:freezesText="true"
            android:drawableTop="@drawable/about_tab" />

    </com.viper.venom.bubbletab.BubbleTab>

</RelativeLayout>